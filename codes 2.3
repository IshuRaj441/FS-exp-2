<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SVG Drawing Tool</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .drawing-container {
      border: 2px solid #333;
      margin: 18px 0;
      background: #fff;
      padding: 10px 0 30px 0;
      max-width: 650px;
      margin-left: auto;
      margin-right: auto;
    }
    h2 {
      margin-left: 14px;
      margin-top: 8px;
    }
    .svg-area {
      display: block;
      background: #f8f8f8;
      border: 2px solid #222;
      margin: 12px auto 0 auto;
      width: 90%;
      height: 350px;
      cursor: crosshair;
      touch-action: none;
    }
  </style>
</head>
<body>
  <div class="drawing-container">
    <h2>SVG Drawing Tool</h2>
    <svg id="drawingCanvas" class="svg-area"></svg>
  </div>
  <script>
    const svg = document.getElementById('drawingCanvas');
    svg.setAttribute('width', svg.clientWidth);
    svg.setAttribute('height', svg.clientHeight);

    let drawing = false;
    let currentPath = null;

    function getMousePosition(evt) {
      const rect = svg.getBoundingClientRect();
      return {
        x: evt.clientX - rect.left,
        y: evt.clientY - rect.top
      };
    }

    svg.addEventListener('mousedown', function(evt) {
      drawing = true;
      const pos = getMousePosition(evt);
      currentPath = document.createElementNS("http://www.w3.org/2000/svg", "polyline");
      currentPath.setAttribute('stroke', '#2397d4');
      currentPath.setAttribute('stroke-width', '2');
      currentPath.setAttribute('fill', 'none');
      currentPath.points.appendItem(svg.createSVGPoint());
      currentPath.points[0].x = pos.x;
      currentPath.points[0].y = pos.y;
      svg.appendChild(currentPath);
    });

    svg.addEventListener('mousemove', function(evt) {
      if (!drawing) return;
      const pos = getMousePosition(evt);
      if (currentPath) {
        let point = svg.createSVGPoint();
        point.x = pos.x;
        point.y = pos.y;
        currentPath.points.appendItem(point);
      }
    });

    svg.addEventListener('mouseup', function(evt) {
      drawing = false;
      currentPath = null;
    });
    svg.addEventListener('mouseleave', function(evt) {
      drawing = false;
      currentPath = null;
    });
  </script>
</body>
</html>
